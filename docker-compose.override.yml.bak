version: '3.8'

services:
  app:
    volumes:
      # Mount source code for hot reloading in development
      - ./app:/app/app
      - ./components:/app/components
      - ./lib:/app/lib
      - ./prisma:/app/prisma
      - ./public:/app/public
      - ./styles:/app/styles
      # Exclude node_modules and .next to use container's versions
      - /app/node_modules
      - /app/.next
    environment:
      # Enable Next.js development mode
      NODE_ENV: development
      # Enable Prisma debug logging
      DEBUG: prisma:query
    command: npm run dev
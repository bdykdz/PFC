# People Finder Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# ========================================
# Application Settings
# ========================================
NODE_ENV=production
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-super-secret-nextauth-key-min-32-chars

# ========================================
# Database Configuration
# ========================================
DB_NAME=people_finder
DB_USER=postgres
DB_PASSWORD=your-secure-database-password

# ========================================
# Azure Active Directory (Required)
# ========================================
AZURE_AD_CLIENT_ID=your-azure-application-id
AZURE_AD_CLIENT_SECRET=your-azure-client-secret
AZURE_AD_TENANT_ID=your-azure-tenant-id

# ========================================
# MinIO File Storage
# ========================================
MINIO_BUCKET_NAME=people-finder-docs
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=your-secure-minio-password

# ========================================
# Optional: Email Configuration (for notifications)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@company.com
SMTP_PASS=your-email-app-password
SMTP_FROM=noreply@company.com

# ========================================
# Optional: Logging and Monitoring
# ========================================
LOG_LEVEL=info
ENABLE_TELEMETRY=false

# ========================================
# Optional: Security Headers
# ========================================
CONTENT_SECURITY_POLICY=default-src 'self'; img-src 'self' data: https:; script-src 'self' 'unsafe-inline' 'unsafe-eval'
HSTS_MAX_AGE=31536000

# ========================================
# Optional: Rate Limiting
# ========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# ========================================
# Optional: File Upload Limits
# ========================================
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,png,jpg,jpeg

# ========================================
# Optional: Backup Configuration
# ========================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *